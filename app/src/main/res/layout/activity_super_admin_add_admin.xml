<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SuperAdminAddAdmin"
    android:id="@+id/superAdminAddAdminLayout"
    android:focusable="true"
    android:focusableInTouchMode="true">

    <ImageView
        android:id="@+id/iconTop"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="30dp"
        android:src="@drawable/logo" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/backButton"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignLeft="@+id/iconTop"
        android:layout_marginLeft="-10dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/rounded"
        android:drawableLeft="@drawable/icon_back"
        app:backgroundTint="@color/white" />

    <ImageView
        android:id="@+id/progressBarBackground"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#E2DADADA"
        android:elevation="100dp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/panelTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/iconTop"
        android:layout_marginHorizontal="20dp"
        android:layout_marginBottom="10dp"
        android:text="Add New Admin Account"
        android:textColor="@color/darkGray"
        android:textSize="16dp"
        android:textStyle="bold" />

    <View
        android:id="@+id/firstLine"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@id/panelTitle"
        android:layout_marginHorizontal="20dp"
        android:layout_marginBottom="5dp"
        android:background="@color/lineColor" />

    <ProgressBar
        android:id="@+id/progressBar"
        style="@android:style/Widget.ProgressBar.Large"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"

        android:elevation="100dp"
        android:visibility="gone"
        android:indeterminate="true"
        android:indeterminateDrawable="@drawable/progress_bg"
        android:progress="0"
        />

    <TextView
        android:id="@+id/progressBarText"
        android:background="#00000000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#FF5722"
        android:text="LOADING."
        android:elevation="100dp"
        android:visibility="gone"
        android:textStyle="bold"
        android:gravity="center"
        android:textSize="15dp"
        android:layout_marginTop="10dp"
        android:layout_alignLeft="@id/progressBar"
        android:layout_alignRight="@id/progressBar"
        android:layout_below="@id/progressBar"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#D7F8F8F8"
        android:layout_margin="0dp"
        android:layout_below="@id/firstLine"
        android:layout_marginTop="30dp"
        >

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/borderrounded"
            android:backgroundTint="#D7F8F8F8"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"
                android:paddingStart="25dp"
                android:paddingEnd="25dp"
                >

                <RelativeLayout
                    android:id="@+id/nameWrapper"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/signUpTitle">

                    <TextView
                        android:id="@+id/nameTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Name"
                        android:textColor="@color/darkGray" />

                    <EditText
                        android:id="@+id/nameValue"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/nameTitle"
                        android:background="@drawable/borderregular"
                        android:backgroundTint="#EAEAEA"
                        android:drawablePadding="20dp"
                        android:hint="Name"
                        android:inputType="textCapWords"
                        android:lines="1"
                        android:maxLines="1"
                        android:padding="10dp"
                        android:singleLine="true"
                        android:textColor="@color/darkGray"
                        android:textColorHint="@color/hintGray"
                        android:textSize="14dp" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/addressWrapper"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_below="@id/nameWrapper">

                    <TextView
                        android:id="@+id/addressTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Address"
                        android:textColor="@color/darkGray" />

                    <EditText
                        android:id="@+id/addressValue"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/addressTitle"
                        android:background="@drawable/borderregular"
                        android:backgroundTint="#EAEAEA"
                        android:drawablePadding="20dp"
                        android:hint="Address"
                        android:maxLines="1"
                        android:lines="1"
                        android:singleLine="true"
                        android:inputType="textCapWords"
                        android:padding="10dp"
                        android:textSize="14dp"
                        android:textColor="@color/darkGray"
                        android:textColorHint="@color/hintGray"/>
                </RelativeLayout>


                <RelativeLayout
                    android:id="@+id/phoneNumWrapper"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_below="@id/addressWrapper">

                    <TextView
                        android:id="@+id/phoneNumTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Phone Number"
                        android:textColor="@color/darkGray" />

                    <EditText
                        android:id="@+id/phoneNumValue"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/phoneNumTitle"
                        android:background="@drawable/borderregular"
                        android:backgroundTint="#EAEAEA"
                        android:drawablePadding="20dp"
                        android:hint="Phone Number"
                        android:padding="10dp"
                        android:maxLines="1"
                        android:lines="1"
                        android:singleLine="true"
                        android:inputType="number"
                        android:maxLength="11"
                        android:textSize="14dp"
                        android:textColor="@color/darkGray"
                        android:textColorHint="@color/hintGray" />
                </RelativeLayout>


                <RelativeLayout
                    android:id="@+id/emailWrapper"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_below="@id/phoneNumWrapper">

                    <TextView
                        android:id="@+id/emailTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Email"
                        android:textColor="@color/darkGray" />

                    <EditText
                        android:id="@+id/emailValue"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/emailTitle"
                        android:background="@drawable/borderregular"
                        android:backgroundTint="#EAEAEA"
                        android:drawablePadding="20dp"
                        android:hint="Email"
                        android:maxLines="1"
                        android:lines="1"
                        android:singleLine="true"
                        android:padding="10dp"
                        android:inputType="textEmailAddress"
                        android:textSize="14dp"
                        android:textColor="@color/darkGray"
                        android:textColorHint="@color/hintGray" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/passwordWrapper"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_below="@id/emailWrapper">

                    <TextView
                        android:id="@+id/passwordTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Password"
                        android:textColor="@color/darkGray" />

                    <EditText
                        android:id="@+id/passwordValue"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/passwordTitle"
                        android:background="@drawable/borderregular"
                        android:backgroundTint="#EAEAEA"
                        android:drawablePadding="20dp"
                        android:hint="Password"
                        android:maxLines="1"
                        android:lines="1"
                        android:singleLine="true"
                        android:padding="10dp"
                        android:inputType="textVisiblePassword"
                        android:textSize="14dp"
                        android:textColor="@color/darkGray"
                        android:textColorHint="@color/hintGray" />
                </RelativeLayout>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/doneSignUpButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/passwordWrapper"
                    android:layout_centerHorizontal="true"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/borderrounded"
                    android:padding="10dp"
                    android:paddingStart="80dp"
                    android:paddingEnd="80dp"
                    android:text="DONE"
                    android:textColor="@color/white"
                    app:backgroundTint="@color/baseOrange" />
            </RelativeLayout>
        </ScrollView>
    </RelativeLayout>
</RelativeLayout>
