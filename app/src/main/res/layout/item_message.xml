<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="10dp"
    app:cardElevation="0dp"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp">

        <ImageView
            android:id="@+id/leftPic"
            android:visibility="gone"
            android:layout_marginRight="10dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.2"
            app:tint="@color/darkGray"
            android:src="@drawable/icon_profile" />

        <RelativeLayout
            android:id="@+id/messageView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="@color/white"
            android:padding="10dp"
            android:background="@drawable/borderregular">

            <TextView
                android:id="@+id/youNameValue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text="GGS"
                android:textSize="13dp"
                android:textStyle="bold"
                android:textColor="@color/darkGray" />
            <TextView
                android:id="@+id/dateTimeValue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:textStyle="italic"
                android:layout_below="@id/youNameValue"
                android:text="Date Time"
                android:textSize="10dp"
                android:textColor="@color/darkGray" />

            <TextView
                android:id="@+id/messageValue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                android:layout_below="@id/dateTimeValue"
                android:text="Message"
                android:textSize="13dp"
                android:textColor="@color/darkGray" />
        </RelativeLayout>

        <ImageView
            android:id="@+id/rightPic"
            android:visibility="gone"
            android:layout_marginLeft="10dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.2"
            app:tint="@color/darkGray"
            android:src="@drawable/icon_profile" />

    </LinearLayout>

</androidx.cardview.widget.CardView>
